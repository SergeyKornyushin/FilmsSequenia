<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LVMW">

    <androidx.cardview.widget.CardView
        style="@style/MM.BGWhite"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/film_poster_image"
            style="@style/M_H256.White_ef.Center_crop" />

        <ImageView
            android:id="@+id/poster_not_found_image"
            style="@style/W50_H50.Center"
            android:visibility="gone"
            app:srcCompat="@drawable/img_image_not_found" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/film_name_text"
        style="@style/Roboto.Bold.Black_00.Size16.M_H40"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="2"
        tools:text="Побег из Шоушенка" />

</LinearLayout>